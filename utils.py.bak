def get_current_time():
    from datetime import datetime
    return datetime.now()

def load_json(file_path):
    import json
    with open(file_path, 'r') as f:
        return json.load(f)

def save_json(data, file_path):
    import json
    with open(file_path, 'w') as f:
        json.dump(data, f)
